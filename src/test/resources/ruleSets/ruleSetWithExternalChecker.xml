<?xml version="1.0" encoding="utf-8" standalone="yes"?>
<!DOCTYPE xml>
<ruleSet>
    <rule>
        <name>TaskNamingConventionCheckerExtern</name>
        <state>true</state>
        <settings>
            <setting name="external_Location">de.viadee.bpm.vPAV.config.reader</setting>
        </settings>
        <elementConventions>
            <elementConvention>
                <name>convention</name>
                <pattern>[A-ZÄÖÜ][a-zäöü\\\-\\\s]+</pattern>
            </elementConvention>
        </elementConventions>
    </rule>
    <rule>
        <name>ExternalChecker</name>
        <state>true</state>
        <settings>
            <setting name="external_Location">de.viadee.bpm.vPAV.processing.checker</setting>
        </settings>
    </rule>
    <rule id="XorCheckerId">
        <name>XorConventionChecker</name>
        <state>true</state>
        <elementConventions>
            <elementConvention>
                <name>xorGateway</name>
                <pattern>.*\?</pattern>
            </elementConvention>
            <elementConvention>
                <name>edges</name>
                <pattern>.*</pattern>
            </elementConvention>
        </elementConventions>
    </rule>
    <rule>
        <name>TimerExpressionChecker</name>
        <state>true</state>
    </rule>
    <rule>
        <name>NoScriptChecker</name>
        <state>true</state>
        <settings>
        </settings>
    </rule>
    <rule>
        <name>ProcessVariablesModelChecker</name>
        <state>true</state>
    </rule>
    <rule>
        <name>ElementIdConventionChecker</name>
        <state>false</state>
        <elementConventions>
            <elementConvention>
                <name>ServiceTask</name>
                <pattern>serviceTask[A-Z]([A-Z0-9]*[a-z][a-z0-9]*[A-Z]|[a-z0-9]*[A-Z][A-Z0-9]*[a-z])[A-Za-z0-9]*
                </pattern>
            </elementConvention>
        </elementConventions>
    </rule>
</ruleSet>